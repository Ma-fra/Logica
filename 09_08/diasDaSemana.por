programa {
	funcao inicio() {
		inteiro diaSemana
		
		escreva("Digite o dia da semana: ")
		leia(diaSemana)
		
		escolha(diaSemana){
		    caso 1:
		    escreva("Domingo")
		    pare
		    caso 2:
		    escreva("Segunda-feira")
		    pare
		    caso 3:
		    escreva("Terça-feira")
		    pare
		    caso 4: 
		    escreva("Quarta-feira")
		    pare
		    caso 5:
		    escreva("Quinta-feira")
		    pare
		    caso 6:
		    escreva("Sexta-feira")
		    pare
		    caso 7:
		    escreva("Sábado")
		    pare
		    caso contrario: escreva("Dia da semana inválido")
		    pare
		}
	}
}
